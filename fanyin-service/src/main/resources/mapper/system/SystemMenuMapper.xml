  <update id="updateByPrimaryKeySelective" parameterType="com.fanyin.model.system.SystemMenu">
    <!--
      @create by mybatis
    -->
    update system_menu
    <set>
      <if test="title != null">
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="nid != null">
        nid = #{nid,jdbcType=VARCHAR},
      </if>
      <if test="pid != null">
